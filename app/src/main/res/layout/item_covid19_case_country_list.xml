<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rounded_black_rectangle"
    android:orientation="horizontal"
    android:padding="16dp"
    android:elevation="8dp">

    <TextView
        android:id="@+id/txt_no"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|start"
        android:layout_marginEnd="4dp"
        android:text="1."
        android:textColor="@color/white"
        android:textSize="@dimen/smallest_txt_size" />

    <ImageView
        android:id="@+id/img_flag"
        android:layout_width="@dimen/small_img_size"
        android:layout_height="@dimen/small_img_size"
        android:layout_gravity="center_vertical|start"
        android:layout_marginEnd="4dp"
        android:src="@drawable/ic_united_states" />

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/txt_country_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            android:layout_marginEnd="4dp"
            android:text="Myanmar"
            android:textColor="@color/white"
            android:textSize="@dimen/smallest_txt_size" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/txt_total_cases"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical|start"
            android:text="64636346"
            android:textColor="@color/white"
            android:textSize="@dimen/smallest_txt_size" />

    </FrameLayout>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <TextView
            android:id="@+id/txt_today_cases"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="64636346"
            android:textColor="@color/white"
            android:textSize="@dimen/smallest_txt_size" />

    </FrameLayout>

    <TextView
        android:id="@+id/txt_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical|end"
        android:text="Detail"
        android:textColor="@color/red"
        android:textSize="@dimen/smallest_txt_size" />

</LinearLayout>
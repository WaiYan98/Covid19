<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/top_rounded_rectangle"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        android:elevation="8dp">

        <TextView
            android:id="@+id/txt_name_cases"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="Total Coronavirus Cases,World:"
            android:textColor="@color/white"
            android:textSize="@dimen/small_txt_size" />

        <TextView
            android:id="@+id/txt_cases_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="954,318"
            android:textColor="@color/white"
            android:textSize="@dimen/large_txt_size"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@color/grey"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp"
        android:elevation="8dp">

        <TextView
            android:id="@+id/txt_name_death"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:text="Total Deaths"
            android:textColor="@color/white"
            android:textSize="@dimen/medium_txt_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_death_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="end"
            android:text="1877437"
            android:textColor="@color/white"
            android:textSize="@dimen/medium_txt_size"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="@color/white_line" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="@drawable/bottom_rounded_grey_rectangle"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp"
        android:elevation="8dp">

        <TextView
            android:id="@+id/txt_name_recovered"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="start"
            android:text="Total Recovered"
            android:textColor="@color/white"
            android:textSize="@dimen/medium_txt_size"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txt_recovered_number"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="0.8"
            android:gravity="end"
            android:text="1877437"
            android:textColor="@color/white"
            android:textSize="@dimen/medium_txt_size"
            android:textStyle="bold" />

    </LinearLayout>

</LinearLayout>